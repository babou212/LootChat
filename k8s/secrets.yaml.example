apiVersion: v1
kind: Secret
metadata:
  name: lootchat-secrets
  namespace: lootchat
type: Opaque
stringData:
  # Database credentials
  POSTGRES_USER: "lootchat"
  POSTGRES_PASSWORD: "CHANGE_ME_STRONG_PASSWORD"
  POSTGRES_DB: "lootchat"
  DATABASE_USERNAME: "lootchat"
  DATABASE_PASSWORD: "CHANGE_ME_STRONG_PASSWORD"
  
  # JWT Secret (Generate with: openssl rand -base64 32)
  JWT_SECRET: "CHANGE_ME_JWT_SECRET_AT_LEAST_256_BITS"
  
  # Session Password (Generate with: openssl rand -hex 16)
  NUXT_SESSION_PASSWORD: "CHANGE_ME_SESSION_PASSWORD_32_CHARS"
  
  # Admin Password
  ADMIN_PASSWORD: "CHANGE_ME_ADMIN_PASSWORD"
  
  # Mail credentials
  MAIL_USERNAME: "your-email@gmail.com"
  MAIL_PASSWORD: "your-app-password"
  
  # Domain configuration
  DOMAIN: "your-domain.com"
  
  # CORS allowed origins
  CORS_ALLOWED_ORIGINS: "https://your-domain.com"
  
  # Public URLs
  APP_PUBLIC_BASE_URL: "https://your-domain.com"
  NUXT_PUBLIC_API_URL: "https://your-domain.com"
  
  # Tenor API Key
  NUXT_PUBLIC_TENOR_API_KEY: "your-tenor-api-key"
