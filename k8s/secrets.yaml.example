# Copy this file to secrets.yaml and fill in your actual values
# Then create the secret: kubectl apply -f secrets.yaml
---
apiVersion: v1
kind: Secret
metadata:
  name: lootchat-secrets
  namespace: lootchat
type: Opaque
stringData:
  # PostgreSQL
  POSTGRES_USER: "lootchat"
  POSTGRES_PASSWORD: "change-me-strong-password"
  POSTGRES_DB: "lootchat"
  
  # Database connection
  DATABASE_USERNAME: "lootchat"
  DATABASE_PASSWORD: "change-me-strong-password"
  
  # JWT
  JWT_SECRET: "change-me-very-long-random-secret-at-least-256-bits"
  
  # CORS
  CORS_ALLOWED_ORIGINS: "https://your-domain.com"
  
  # Application
  APP_PUBLIC_BASE_URL: "https://your-domain.com"
  ADMIN_PASSWORD: "change-me-admin-password"
  
  # Nuxt session
  NUXT_SESSION_PASSWORD: "change-me-32-character-password"
  NUXT_PUBLIC_API_URL: "https://your-domain.com"
  NUXT_API_URL: "http://lootchat-backend:8080"
  
  # Email (SMTP)
  MAIL_USERNAME: "your-email@example.com"
  MAIL_PASSWORD: "your-smtp-password"
  
  # MinIO S3 Storage
  MINIO_ROOT_USER: "minioadmin"
  MINIO_ROOT_PASSWORD: "change-me-minio-password"
